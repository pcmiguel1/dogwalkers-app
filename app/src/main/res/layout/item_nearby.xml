<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_above="@id/rec_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_round_favorite_24"
                    android:layout_alignParentRight="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="200dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/walker_perfil_img"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/walker_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$45.00/hr"
                        android:fontFamily="@font/montserratsemibold"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </RelativeLayout>
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rec_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/walker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dan Wells"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_round_star_24"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/walker_classification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:text="4.8"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/walker_classification_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratlight"
                        android:textColor="#A0AAB4"
                        android:textSize="12sp"
                        android:text="(2243)"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/walker_location"
                android:layout_below="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratlight"
                android:textSize="12sp"
                android:textColor="#A0AAB4"
                android:text="Affenpinscher, Afghan Hound, +1"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>